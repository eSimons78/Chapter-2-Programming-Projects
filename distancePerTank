#include <iostream>

int main() {
    // Define gas tank capacity and mileage
    const double tankCapacity = 20.0; // in gallons
    const double townMpg = 23.5; // miles per gallon in town
    const double highwayMpg = 28.9; // miles per gallon on highway

    // Calculate distances
    double townDistance = tankCapacity * townMpg;
    double highwayDistance = tankCapacity * highwayMpg;

    // Display the distances
    std::cout << "Car travel distances on one tank of gas:" << std::endl;
    std::cout << "In town: " << townDistance << " miles." << std::endl;
    std::cout << "On the highway: " << highwayDistance << " miles." << std::endl;

    return 0;
}
